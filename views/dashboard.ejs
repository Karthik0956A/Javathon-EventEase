<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Styling for the cards */
        .card {
            border-radius: 10px; /* Rounded corners */
            overflow: hidden; /* Ensures the content stays within the card */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow effect */
        }

        /* Styling for the card image */
        .card-img-top {
            height: 200px; /* Set a fixed height for images */
            object-fit: cover; /* Ensures images are cropped to fit the container */
        }

        /* Styling for the card body description */
        .card-body {
            display: flex;
            flex-direction: column;
            height: 150px; /* Ensure a consistent height */
        }

        /* Ensure description text stays at 2 lines and adds ellipsis */
        .card-text {
            flex-grow: 1;
            display: -webkit-box;
            -webkit-line-clamp: 2; /* Limit to 2 lines */
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        /* Styling for the card footer */
        .card-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* Add margin to the delete and participants button */
        .card-footer .btn {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container mt-4">
        <a href="/dashboard/create" class="btn btn-primary mb-4">Create Event</a>
        <div class="row">
            <% if (events && events.length > 0) { %>
                <% events.forEach(function(event) { %>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <img src="<%= event.image %>" class="card-img-top" alt="<%= event.eventName %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= event.eventName %></h5>
                                <p class="card-text"><%= event.description %></p>
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-danger" onclick="deleteEvent('<%= event._id %>')">Delete</button>
                                <a href="/dashboard/participants/<%= event._id %>" class="btn btn-secondary">Participants</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No events found.</p>
            <% } %>
        </div>
    </div>
    <script>
        async function deleteEvent(eventId) {
            if (confirm('Are you sure you want to delete this event?')) {
                try {
                    const response = await fetch(`/dashboard/delete/${eventId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Error deleting event.');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error deleting event.');
                }
            }
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
